<h1>Нове замовлення</h1>

<%= form_with model: @order, local: true do |form| %>
  <div class="form-group">
    <%= form.label :user_id, 'Користувач' %>
    <%= form.number_field :user_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status, 'Статус' %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total, 'Сума' %>
    <%= form.number_field :total, class: "form-control" %>
  </div>

  <%= form.submit 'Створити замовлення', class: "btn btn-primary" %>
<% end %>

<%= link_to 'Назад до списку', orders_path, class: "btn btn-secondary" %>
