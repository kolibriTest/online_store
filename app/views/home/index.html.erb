<!-- app/views/home/index.html.erb -->
<div class="container">
  <h1 class="text-center">Ласкаво просимо до інтернет-магазину ліків</h1>

  <section class="my-4">
    <h2>Каталог товарів</h2>
    <%= link_to 'Переглянути каталог', products_path, class: 'btn btn-primary' %>
  </section>

  <!-- Додаємо кнопку для створення нового товару -->
  <section class="my-4">
    <%= link_to 'Додати новий товар', new_product_path, class: 'btn btn-success' %>
  </section>

  <!-- Кнопка для переходу до управління товарами -->
  <section class="my-4">
    <%= link_to 'Управління товарами', manage_products_path, class: 'btn btn-warning' %>
  </section>

  <section class="my-4">
    <h2>Популярні товари</h2>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="card">
            <div class="card-body">
              <p class="card-title"><%= product.name %></p>
              <p><%= product.price %> грн</p>
              <%= link_to 'Деталі', product_path(product), class: 'btn btn-link' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
