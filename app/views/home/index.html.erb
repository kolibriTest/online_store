<div class="container py-5">
  <!-- Заголовок -->
  <h1 class="text-primary mb-5">Ласкаво просимо до інтернет-магазину ліків</h1>

  <!-- Каталог товарів -->
  <section class="mb-5">
    <h2 class="mb-3 text-secondary">Каталог товарів</h2>
    <div>
      <%= link_to 'Переглянути каталог', products_path, class: 'btn btn-primary' %>
    </div>
  </section>

  <!-- Блок для адміністратора -->
  <% if current_user&.email == 'administrator@gmail.com' %>
    <section class="mb-5">
      <div class="row">
        <div class="col-md-6">
          <div class="p-4 bg-light shadow-sm rounded">
            <h3 class="text-warning">Управління товарами</h3>
            <%= link_to 'Перейти до управління', manage_products_path, class: 'btn btn-warning mt-3' %>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>
