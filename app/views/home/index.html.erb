<!-- app/views/home/index.html.erb -->
<div class="container py-5">
  <h1 class="text-primary mb-5">Ласкаво просимо до інтернет-магазину ліків</h1>

  <section class="mb-5">
    <h2 class="mb-3 text-secondary">Каталог товарів</h2>
    <%= link_to 'Переглянути каталог', products_path, class: 'btn btn-primary' %>
  </section>

  <section class="row mb-5">
    <div class="col-md-6">
      <div class="p-3 bg-light shadow-sm rounded">
        <h3 class="text-warning">Управління товарами</h3>
        <%= link_to 'Перейти до управління', manage_products_path, class: 'btn btn-warning mt-3' %>
      </div>
    </div>
  </section>

  <section>
    <h2 class="mb-4 text-secondary">Популярні товари</h2>
    <div class="row g-4">
      <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title text-primary"><%= product.name %></h5>
              <p class="card-text text-muted"><strong>Ціна:</strong> <%= product.price %> грн</p>
              <%= link_to 'Деталі', product_path(product), class: 'btn btn-outline-primary mt-3' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
