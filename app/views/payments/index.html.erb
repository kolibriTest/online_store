<h1>Список платежів</h1>
<%= link_to 'Додати новий платіж', new_payment_path, class: "btn btn-success mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Тип</th>
      <th>Сума</th>
      <th>Дата</th>
      <th>Статус</th>
      <th>Дії</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><%= payment.payment_type %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.date %></td>
        <td><%= payment.status %></td>
        <td>
          <%= link_to 'Переглянути', payment_path(payment), class: "btn btn-primary btn-sm" %>
          <%= link_to 'Редагувати', edit_payment_path(payment), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Видалити', payment_path(payment), method: :delete, data: { confirm: "Ви впевнені?" }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
