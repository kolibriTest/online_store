<!DOCTYPE html>
<html>
  <head>
    <title>Редагувати товар</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <header class="mb-4">
      <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
          <a class="navbar-brand" href="#"><strong>Магазин ліків</strong></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Переключити навігацію">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item"><%= link_to "Головна", root_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Кошик", cart_items_path, class: "nav-link" %></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="container">
      <h1 class="text-center text-success mb-4">Редагувати товар</h1>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card shadow-sm p-4">
            <%= form_with(model: @product, local: true, class: 'form') do |form| %>
              <% if @product.errors.any? %>
                <div class="alert alert-danger">
                  <h4><%= pluralize(@product.errors.count, "помилка") %> заважають зберегти товар:</h4>
                  <ul>
                    <% @product.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="mb-3">
                <%= form.label :name, 'Назва товару', class: 'form-label' %>
                <%= form.text_field :name, class: "form-control" %>
              </div>

              <div class="mb-3">
                <%= form.label :description, 'Опис товару', class: 'form-label' %>
                <%= form.text_area :description, class: "form-control", rows: 4 %>
              </div>

              <div class="mb-3">
                <%= form.label :price, 'Ціна', class: 'form-label' %>
                <%= form.number_field :price, class: "form-control" %>
              </div>

              <div class="d-flex justify-content-between mt-4">
                <%= form.submit "Оновити", class: "btn btn-primary" %>
                <%= link_to 'Назад', manage_products_path, class: 'btn btn-secondary' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
