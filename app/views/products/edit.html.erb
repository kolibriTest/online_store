<!-- app/views/products/edit_product.html.erb -->
<h1>Редагувати товар</h1>

<%= form_with(model: @product, url: product_path(@product), method: :patch, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Назва товару' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price, 'Ціна' %>
    <%= form.number_field :price, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Зберегти зміни', class: 'btn btn-success' %>
    <%= link_to 'Назад', manage_products_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
