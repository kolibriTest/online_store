<!DOCTYPE html>
<html>
  <head>
    <title><%= @product.name %> - Деталі товару</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Підключення Font Awesome для іконок -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
  </head>
  <body>
    <header class="mb-4">
      <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
        <div class="container">
          <a class="navbar-brand" href="#">Магазин ліків</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Переключити навігацію">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item"><%= link_to "Головна", root_path, class: "nav-link" %></li>
              <li class="nav-item"><%= link_to "Кошик", cart_items_path, class: "nav-link" %></li>
              <% if user_signed_in? %>
                <!-- Значок профілю -->
                <li class="nav-item">
                  <a href="<%= edit_user_registration_path %>" class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Профіль">
                    <i class="fas fa-user"></i>
                  </a>
                </li>
                <!-- Значок виходу -->
                <li class="nav-item">
                  <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-link nav-link", data: { bs_toggle: "tooltip", bs_placement: "bottom", bs_original_title: "Вийти" } do %>
                    <i class="fas fa-sign-out-alt"></i>
                  <% end %>
                </li>
              <% else %>
                <!-- Значок входу -->
                <li class="nav-item">
                  <a href="<%= new_user_session_path %>" class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Увійти">
                    <i class="fas fa-sign-in-alt"></i>
                  </a>
                </li>
                <!-- Значок реєстрації -->
                <li class="nav-item">
                  <a href="<%= new_user_registration_path %>" class="nav-link" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Реєстрація">
                    <i class="fas fa-user-plus"></i>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card shadow-sm">
            <div class="card-body">
              <h1 class="card-title text-center text-primary"><%= @product.name %></h1>
              <hr>
              <p class="card-text"><strong>Опис:</strong> <%= @product.description.presence || "Опис відсутній" %></p>
              <p class="card-text"><strong>Ціна:</strong> <span class="text-success"><%= @product.price %> грн</span></p>
              <p class="card-text"><strong>Наявність:</strong>
                <% if @product.stock.to_i > 0 %>
                  <span class="text-success"><%= @product.stock %> в наявності</span>
                <% else %>
                  <span class="text-danger">Немає в наявності</span>
                <% end %>
              </p>
              <div class="d-flex justify-content-between mt-4">
                <%= link_to 'Назад до каталогу', products_path, class: 'btn btn-secondary' %>
                <% if @product.stock.to_i > 0 %>
                  <%= link_to 'Додати до кошика', add_to_cart_path(@product), class: 'btn btn-success' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl);
        });
      });
    </script>
  </body>
</html>
