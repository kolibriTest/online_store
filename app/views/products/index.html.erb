<!DOCTYPE html>
<html>
  <head>
    <title>Інтернет-магазин ліків</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <header class="my-4">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Головна", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Товари", products_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Кошик", cart_items_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Замовлення", orders_path, class: "nav-link" %></li>
        </ul>
      </nav>
    </header>

    <h1 class="text-center">Каталог товарів</h1>

    <div class="container">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.price %> грн</p>
                <p><%= product.details %></p>

                <!-- Форма для додавання товару в кошик -->
                <%= form_with url: cart_items_path, method: :post do |f| %>
                  <%= f.hidden_field :product_id, value: product.id %> <!-- ID продукту -->

                  <div class="form-group">
                    <%= f.label :quantity, 'Кількість' %>
                    <%= f.number_field :quantity, min: 1, max: 9, value: 1, class: 'form-control' %> <!-- Поле для кількості -->
                  </div>

                  <%= f.submit 'Додати в кошик', class: 'btn btn-success mt-2' %> <!-- Кнопка додавання в кошик -->
                <% end %>

                <%= link_to 'Деталі', product_path(product), class: 'btn btn-link' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
