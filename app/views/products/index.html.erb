<!DOCTYPE html>
<html>
  <head>
    <title>Інтернет-магазин ліків</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <header class="my-4">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to "Головна", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Товари", products_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Кошик", cart_items_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Замовлення", orders_path, class: "nav-link" %></li>
        </ul>
      </nav>
    </header>

    <h1 class="text-center">Каталог товарів</h1>

    <section>
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.price %> грн</p>
                <%= link_to 'Деталі', product_path(product), class: 'btn btn-link' %>
                <%= link_to 'Додати в кошик', cart_items_path(product_id: product.id), method: :post, class: 'btn btn-success' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
  </body>
</html>
